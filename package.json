{
  "name": "seo-mcp",
  "version": "1.0.0",
  "description": "MCP server for SEO analysis, auditing, and optimization. Provides tools for page analysis, Core Web Vitals, schema validation, keyword research, and more.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "seo-mcp": "dist/mcp/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/mcp/index.js",
    "dev": "tsx src/mcp/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "rebuild-db": "tsx src/scripts/rebuild-database.ts",
    "validate-db": "tsx src/scripts/validate-database.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "seo",
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "web-analysis",
    "core-web-vitals",
    "schema-markup",
    "structured-data",
    "backlinks",
    "keyword-research"
  ],
  "author": {
    "name": "Anurag Kalita",
    "url": "https://github.com/anurag-kalita"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anurag-kalita/seo-mcp"
  },
  "homepage": "https://github.com/anurag-kalita/seo-mcp",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "data/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.0",
    "lru-cache": "^11.0.0",
    "sql.js": "^1.11.0",
    "zod": "^3.24.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.0.0",
    "puppeteer": "^23.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
